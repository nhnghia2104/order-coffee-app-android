<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:padding="10dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin" />

    <View
        android:id="@+id/view3"
        android:background="@color/cardview_dark_background"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <ImageView
        android:id="@+id/imgAvatarInfo"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="20dp"
        android:src="@drawable/ic_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/edtNameInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Họ và Tên" />

        <EditText
            android:id="@+id/edtPhoneNumberInfo"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Số điện thoại" />

        <EditText
            android:id="@+id/edtBirthInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="date"
            android:hint="DD/MM/YYYY" />

        <RadioGroup
            android:id="@+id/radioGroupGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnFemaleInfo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_black_corner_shadow"
                android:baselineAligned="false"
                android:text="Nữ"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />

            <RadioButton
                android:id="@+id/btnMaleInfo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_black_corner_shadow"
                android:baselineAligned="false"
                android:text="Nam"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/btnSecretSexInfo"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_black_corner_shadow"
                android:baselineAligned="false"
                android:text="Không"
                android:textSize="18dp" />
        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/txtUpdateInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_orange_with_white_corner"
        android:layout_gravity="center_vertical|center_horizontal"
        android:padding="15dp"
        android:text="Cập nhật thông tin"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>