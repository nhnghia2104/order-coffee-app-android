<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    tools:context=".ui.item.ChildItemInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imageIsFavorite_BottomSheet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtItemName_BottomSheet"
            app:srcCompat="@drawable/ic_z_favorite" />

        <TextView
            android:id="@+id/txtItemName_BottomSheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Hộp quà Tết 2021"
            android:textColor="@color/zcafe_black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageIsFavorite_BottomSheet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageItem_BottomSheet" />

        <TextView
            android:id="@+id/txtItemPrice_BottomSheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="690.000đ"
            android:textColor="@color/zcafe_black_80"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/txtItemName_BottomSheet"
            app:layout_constraintStart_toStartOf="@+id/txtItemName_BottomSheet"
            app:layout_constraintTop_toBottomOf="@+id/txtItemName_BottomSheet" />

        <TextView
            android:id="@+id/txtItemDescription_BottomSheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Mang Tết về nhà với thức quà sang trọng tinh tế của \nZ! Cafe\nMang Tết về nhà với thức quà sang trọng tinh tế của \nZ! Cafe\nMang Tết về nhà với thức quà sang trọng tinh tế của \nZ! Cafe\nMang Tết về nhà với thức quà sang trọng tinh tế của \nZ! Cafe"
            android:textColor="@color/zcafe_black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtItemName_BottomSheet"
            app:layout_constraintTop_toBottomOf="@+id/txtItemPrice_BottomSheet" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageItem_BottomSheet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius_top_left="20dp"
            app:riv_corner_radius_top_right="20dp" />

        <ImageButton
            android:id="@+id/btnImageClose_BottomSheet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>