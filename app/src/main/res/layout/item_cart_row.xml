<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_bottom"
    android:paddingStart="20dp"
    android:paddingTop="15dp"
    android:paddingEnd="20dp"
    android:paddingBottom="15dp">


    <ImageView
        android:id="@+id/img_item_cart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_final_price_cart"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_item_final_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="45.000đ"
        android:textColor="@color/zcafe_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_item_name_cart"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_name_cart" />

    <TextView
        android:id="@+id/txt_item_name_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Trà Đào Cam Sả Trà Đào Cam Sả Trà Đào Cam Sả Trà Đào Cam Sả Trà Đào Cam Sả Trà Đào Cam Sả"
        android:textColor="@color/zcafe_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_item_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_outline"
        android:paddingStart="2dp"
        android:paddingTop="4dp"
        android:paddingEnd="2dp"
        android:paddingBottom="4dp"
        app:layout_constraintStart_toStartOf="@+id/txt_item_final_price_cart"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_final_price_cart">

        <ImageButton
            android:id="@+id/btn_increase_cart"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_arrow_right_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_item_quantity_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/zcafe_black" />

        <ImageButton
            android:id="@+id/btn_decrease_cart"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_baseline_arrow_left_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txt_item_quantity_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/zcafe_black" />

        <TextView
            android:id="@+id/txt_item_quantity_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-medium"
            android:minWidth="60dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/zcafe_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt_item_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="48.000đ"
        android:textColor="@color/colorIconInActive"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_final_price_cart"
        app:layout_constraintStart_toEndOf="@+id/txt_item_final_price_cart" />

    <ImageButton
        android:id="@+id/btn_delete_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="45dp"
        android:background="@color/white"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout7"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_24"
        app:tint="#D30808" />
</androidx.constraintlayout.widget.ConstraintLayout>