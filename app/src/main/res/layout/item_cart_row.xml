<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_bottom"
    android:paddingStart="20dp"
    android:paddingTop="15dp"
    android:paddingEnd="20dp"
    android:paddingBottom="15dp">


    <ImageView
        android:id="@+id/img_item_cart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_final_price_cart"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_item_final_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="45.000đ"
        android:textColor="@color/zcafe_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_item_name_cart"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_name_cart" />

    <TextView
        android:id="@+id/txt_item_name_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="Trà Đào Cam Sả Trà Đào Cam Sả Trà Đào Cam Sả Trà Đào Cam Sả Trà Đào Cam Sả Trà Đào Cam Sả"
        android:textColor="@color/zcafe_black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_item_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_quantity"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/txt_item_final_price_cart"
        app:layout_constraintTop_toBottomOf="@+id/txt_item_final_price_cart">

        <ImageButton
            android:id="@+id/btn_decrease_cart"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:tint="@color/zcafe_black"
            app:srcCompat="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/txt_item_quantity_cart"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="0"
            android:textColor="@color/zcafe_black" />

        <ImageButton
            android:id="@+id/btn_increase_cart"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:tint="@color/zcafe_black"
            app:srcCompat="@drawable/ic_baseline_add_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_item_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="48.000đ"
        android:textColor="@color/colorIconInActive"
        app:layout_constraintBottom_toBottomOf="@+id/txt_item_final_price_cart"
        app:layout_constraintStart_toEndOf="@+id/txt_item_final_price_cart" />

    <ImageButton
        android:id="@+id/btn_delete_cart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/white"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:tint="#D30808"
        app:layout_constraintBottom_toBottomOf="@+id/layout_quantity"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_delete_24" />
</androidx.constraintlayout.widget.ConstraintLayout>