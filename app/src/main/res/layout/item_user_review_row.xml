<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_bottom"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_product_review"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:src="@drawable/image_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            android:id="@+id/ratebar_review"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            app:layout_constraintBottom_toTopOf="@+id/txt_review_content"
            app:layout_constraintStart_toStartOf="@+id/txt_product_review_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_review_name" />

        <TextView
            android:id="@+id/txt_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21/06/2021"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/txt_product_review_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Đồ ăn cho chó abca sxy asd "
            android:textColor="@color/zcafe_black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_product_review"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_review_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textColor="@color/zcafe_black"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_review_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ratebar_review"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_review_name" />

        <TextView
            android:id="@+id/txt_review_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Very good"
            android:textColor="@color/zcafe_black"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/txt_review_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ratebar_review"
            app:layout_constraintTop_toBottomOf="@+id/txt_review_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>