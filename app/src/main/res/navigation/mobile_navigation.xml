<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.cogeek.tncoffee.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home"
        android:label="Trang chủ" >
        <action
            android:id="@+id/action_navigation_home_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_home_open_item"
            app:destination="@id/itemFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.cogeek.tncoffee.ui.menu.MenuFragment"
        tools:layout="@layout/fragment_menu"
        android:label="Đặt món">
        <action
            android:id="@+id/action_navigation_menu_to_cartFragment"
            app:destination="@id/cartFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
        <action
            android:id="@+id/action_menu_open_item"
            app:destination="@id/itemFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.cogeek.tncoffee.ui.more.PersonalFragment"
        tools:layout="@layout/fragment_personal"
        android:label="Khác" >
        <action
            android:id="@+id/action_navigation_more_to_userInfoFragment"
            app:destination="@id/userInfoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_navigation_more_to_userOrderHistoryFragment"
            app:destination="@id/userOrderHistoryFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            />
        <action
            android:id="@+id/action_navigation_more_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/userInfoFragment"
        android:name="com.cogeek.tncoffee.ui.userinfo.UserInfoFragment"
        android:label="UserInfoFragment" />
    <fragment
        android:id="@+id/cartBottomSheetDialogFragment"
        android:name="com.cogeek.tncoffee.ui.cart.CartBottomSheetDialogFragment"
        android:label="CartBottomSheetDialogFragment" />
    <fragment
        android:id="@+id/userOrderHistoryFragment"
        android:name="com.cogeek.tncoffee.ui.userorder.UserOrderHistoryFragment"
        android:label="fragment_user_order_history"
        tools:layout="@layout/fragment_user_order_history" >
        <action
            android:id="@+id/action_userOrderHistoryFragment_to_userOrderDetailFragment"
            app:destination="@id/userOrderDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/userOrderDetailFragment"
        android:name="com.cogeek.tncoffee.ui.userorder.detail.UserOrderDetailFragment"
        android:label="user_order_detail_fragment"
        tools:layout="@layout/fragment_user_order_detail" >
        <action
            android:id="@+id/action_userOrderDetailFragment_to_orderTrackingFragment"
            app:destination="@id/orderTrackingFragment" app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/orderTrackingFragment"
        android:name="com.cogeek.tncoffee.ui.userorder.tracking.OrderTrackingFragment"
        android:label="fragment_order_tracking"
        tools:layout="@layout/fragment_order_tracking" />
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.cogeek.tncoffee.ui.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.cogeek.tncoffee.ui.menu.item.ItemFragment"
        android:label="fragment_item"
        tools:layout="@layout/fragment_item" />

</navigation>